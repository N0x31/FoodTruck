<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="fr.wcs.foodtruck.AdminActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/adminEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/adminEmail"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/adminPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/adminPassword"
            android:inputType="textPersonName"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/adminEmail"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/adminEmail"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/adminEmail" />

        <Button
            android:id="@+id/adminConnex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adminConnex"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/adminPassword"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/adminPassword"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/adminPassword"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>



