<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodtruck_bg"
    tools:context="fr.wcs.foodtruck.AdminAccueil">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/admin_title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/blanc"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cadre_admin"
        app:layout_constraintRight_toRightOf="@+id/cadre_admin"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/cadre_admin"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadre_admin"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/cadre_admin"
        android:layout_width="314dp"
        android:layout_height="71dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/cadre_formule"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="149dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/foodtruck_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="53dp"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lieu"
        app:layout_constraintTop_toBottomOf="@+id/cadre_admin"
        app:srcCompat="@drawable/menu_picto" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="53dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadre_admin"
        app:srcCompat="@drawable/place_picto" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintVertical_bias="0.319"
        app:srcCompat="@drawable/message_picto"
        app:layout_constraintBottom_toTopOf="@+id/deconnect" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintLeft_toRightOf="@+id/contact"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        app:layout_constraintVertical_bias="0.325"
        app:srcCompat="@drawable/event_picto"
        app:layout_constraintBottom_toTopOf="@+id/deconnect" />

    <Button
        android:id="@+id/deconnect"
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/button_border_white"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/deconnexion"
        android:textColor="@color/blanc"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/cadre_admin"
        app:layout_constraintRight_toRightOf="@+id/cadre_admin"
        app:layout_constraintHorizontal_bias="0.636" />


</android.support.constraint.ConstraintLayout>
