<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodtruck_bg"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/listeLundi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/lundi"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="69dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/penMardi"
        android:layout_marginLeft="4dp" />
    <TextView
        android:id="@+id/listeMardi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/mardi"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/penMardi"
        app:layout_constraintLeft_toRightOf="@+id/penMercredi"
        android:layout_marginLeft="26dp" />
    <TextView
        android:id="@+id/listeMercredi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/mercredi"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/penMercredi"
        android:layout_marginEnd="117dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="117dp" />
    <TextView
        android:id="@+id/listeJeudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/jeudi"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/penJeudi"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/penVendredi"
        android:layout_marginLeft="30dp" />
    <TextView
        android:id="@+id/listeVendredi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/vendredi"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/penVendredi"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/penVendredi" />
    <ImageView
        android:id="@+id/penLundi"
        android:layout_width="0dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/crayon_orange"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/listeLundi"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/penMardi"
        android:layout_marginTop="58dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/penMercredi" />
    <ImageView
        android:id="@+id/penMardi"
        android:layout_width="30dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/crayon_orange"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/listeMardi"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/penMercredi"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/listeLundi"
        android:layout_marginBottom="59dp" />
    <ImageView
        android:id="@+id/penMercredi"
        android:layout_width="30dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/crayon_orange"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/listeMercredi"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/penJeudi"
        android:layout_width="0dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/crayon_orange"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/listeJeudi"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/penVendredi"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/listeMercredi"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toRightOf="@+id/penVendredi" />
    <ImageView
        android:id="@+id/penVendredi"
        android:layout_width="30dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/crayon_orange"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="71dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp" />





</android.support.constraint.ConstraintLayout>