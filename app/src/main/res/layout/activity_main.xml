<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.MainActivity"
    android:background="#000000"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="73dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="340dp"
        android:layout_height="162dp"
        app:srcCompat="@drawable/menujour"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.392" />

    <TextView
        android:id="@+id/menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="Menu du jour "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/menu"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/menu"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu" />

    <ImageView
        android:id="@+id/presentation"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/apropos"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginLeft="-71dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu"
        app:layout_constraintRight_toLeftOf="@+id/places_txt"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_bias="0.197" />

    <TextView
        android:id="@+id/apropos_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A propos"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/presentation"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/presentation"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/presentation"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/places"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/menu" />

        <TextView
            android:id="@+id/places_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Emplacement"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textEnvoyer"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/lieu"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintLeft_toLeftOf="@+id/lieu"
            app:layout_constraintRight_toRightOf="@+id/lieu"
            app:layout_constraintTop_toTopOf="@+id/lieu" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/contact"
        android:layout_marginLeft="-13dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/presentation"
        app:layout_constraintBottom_toBottomOf="@+id/event"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Contact\nprivatisation"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textEnvoyer"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/contact"
            app:layout_constraintLeft_toLeftOf="@+id/contact"
            app:layout_constraintRight_toRightOf="@+id/contact"
            app:layout_constraintTop_toTopOf="@+id/contact"
            app:layout_constraintVertical_bias="0.513"
            app:layout_constraintHorizontal_bias="0.525" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/events"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        android:layout_marginRight="-14dp"
        app:layout_constraintRight_toRightOf="@+id/lieu"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/contact"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/event_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenements"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/event"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/event"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/event"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/event" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteY="601dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
