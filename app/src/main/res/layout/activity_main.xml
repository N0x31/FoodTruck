<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/menu" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="157dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/contact"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/presentation"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation"
        app:layout_constraintRight_toLeftOf="@+id/event"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/actualite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.464" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="147dp"
        android:layout_height="151dp"
        app:srcCompat="@drawable/events"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/lieu"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/actualite"
        app:layout_constraintVertical_bias="0.53" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="406dp"
        android:layout_height="142dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:srcCompat="@drawable/menujour"
        tools:layout_editor_absoluteX="-3dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/presentation"
        android:layout_width="179dp"
        android:layout_height="144dp"
        app:srcCompat="@drawable/apropos"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintRight_toLeftOf="@+id/lieu"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="159dp"
        android:layout_height="143dp"
        app:srcCompat="@drawable/places"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="@+id/menu" />

    <TextView
        android:id="@+id/actualite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/event"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/contact" />

</android.support.constraint.ConstraintLayout>
