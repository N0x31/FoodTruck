<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.MainActivity"
    android:background="@drawable/foodtruck_bg">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foodtruck_logo" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="340dp"
            android:layout_height="162dp"
            android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:srcCompat="@drawable/accueil_aujourdhui" />

    <TextView
        android:id="@+id/menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="@string/Aujourdhui"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/menu"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/menu"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu" />

    <ImageView
        android:id="@+id/presentation"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/accueil_apropos"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginLeft="-71dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu"
        app:layout_constraintRight_toLeftOf="@+id/places_txt"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_bias="0.197" />

    <TextView
        android:id="@+id/apropos_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_propos"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/presentation"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/presentation"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/presentation"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/accueil_emplacements"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/menu" />

        <TextView
            android:id="@+id/places_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/emplacement"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textEnvoyer"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/lieu"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintLeft_toLeftOf="@+id/lieu"
            app:layout_constraintRight_toRightOf="@+id/lieu"
            app:layout_constraintTop_toTopOf="@+id/lieu" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/accueil_contact"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/presentation"
        app:layout_constraintBottom_toBottomOf="@+id/event"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Contact\nprivatisation"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textEnvoyer"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/contact"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/contact"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="@+id/contact"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/contact"
            app:layout_constraintVertical_bias="0.444" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/accueil_events"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        android:layout_marginRight="-14dp"
        app:layout_constraintRight_toRightOf="@+id/lieu"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/contact"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/event_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenements"
        android:textAllCaps="true"
        android:textColor="@color/textEnvoyer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/event"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/event"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/event"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/event" />

        <TextView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-49dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Retrouvez nous sur"
            android:textAllCaps="true"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.338"
            app:layout_constraintLeft_toLeftOf="@+id/contact_txt"
            app:layout_constraintRight_toRightOf="@+id/event"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            app:layout_constraintVertical_bias="0.157" />

        <ImageView
            android:id="@+id/facebookLogo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/facebook"
            app:layout_constraintLeft_toRightOf="@+id/facebook"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="@+id/event"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/event"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
