<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/presentation"
        android:layout_marginLeft="-46dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/actualite"
        app:layout_constraintVertical_bias="0.597" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendar"
        app:layout_constraintLeft_toRightOf="@+id/contact"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/lieu" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="377dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/burgertour"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.571" />

    <ImageView
        android:id="@+id/presentation"
        android:layout_width="89dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/poutine"
        app:layout_constraintRight_toLeftOf="@+id/lieu"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/menu" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lieu"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="@+id/menu" />

    <TextView
        android:id="@+id/actualite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/contact"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/event" />

</android.support.constraint.ConstraintLayout>
