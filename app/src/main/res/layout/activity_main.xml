<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginTop="201dp"
        app:layout_constraintTop_toBottomOf="@+id/presentation"
        app:layout_constraintRight_toLeftOf="@+id/event"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/presentation"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="185dp"
        app:layout_constraintTop_toBottomOf="@+id/lieu"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/lieu" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        tools:layout_editor_absoluteX="59dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <ImageView
        android:id="@+id/lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintLeft_toRightOf="@+id/presentation"
        android:layout_marginLeft="224dp" />

    <TextView
        android:id="@+id/actualite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/event"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/contact"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event" />

</android.support.constraint.ConstraintLayout>
